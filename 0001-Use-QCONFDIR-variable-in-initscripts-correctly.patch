diff --git a/redhat/bgpd.init b/redhat/bgpd.init
index 5620ebe..1d078d6 100644
--- a/redhat/bgpd.init
+++ b/redhat/bgpd.init
@@ -22,7 +22,7 @@ RETVAL=0
 PROG="bgpd"
 cmd=bgpd
 LOCK_FILE=/var/lock/subsys/bgpd
-CONF_FILE=/etc/quagga/bgpd.conf
+CONF_FILE=$QCONFDIR/bgpd.conf
 PID_FILE=/var/run/quagga/bgpd.pid
 
